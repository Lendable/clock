{
  "name": "lendable/clock",
  "description": "Clock Abstraction",
  "type": "library",
  "license": "proprietary",
  "authors": [
    {
      "name": "Lendable Ltd",
      "email": "dev@lendable.co.uk"
    }
  ],
  "autoload": {
    "psr-4": {
      "Lendable\\Clock\\": "lib/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Lendable\\Clock\\Unit\\": "tests/unit/",
      "Tests\\Lendable\\Clock\\Functional\\": "tests/functional/"
    }
  },
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.15",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "mikey179/vfsstream": "^1.6",
    "phpstan/phpstan": "^0.11.15",
    "phpstan/phpstan-phpunit": "^0.11.2",
    "phpstan/phpstan-strict-rules": "^0.11.1",
    "phpunit/phpunit": "^7.5",
    "sensiolabs/security-checker": "^6.0"
  },
  "suggest": {
    "ext-json": "To use the SerializedFixedClock to store values across processes (functional testing)"
  },
  "config": {
    "bin-dir": "bin",
    "sort-packages": true
  },
  "prefer-stable": true,
  "scripts": {
    "security:check": [
      "security-checker security:check --ansi"
    ],
    "code-style:fix": [
      "PHP_CS_FIXER_FUTURE_MODE=1 php-cs-fixer fix --diff --ansi --using-cache=no"
    ],
    "code-style:check": [
      "PHP_CS_FIXER_FUTURE_MODE=1 php-cs-fixer fix --dry-run --diff --ansi --using-cache=no"
    ],
    "lint:php": [
      "parallel-lint lib",
      "parallel-lint tests"
    ],
    "lint": [
      "@lint:php"
    ],
    "phpstan": [
      "phpstan analyse -l 7 lib/ tests/ --ansi --no-progress"
    ],
    "static-analysis": [
      "@composer validate",
      "@lint",
      "@phpstan"
    ],
    "phpunit:unit": [
      "phpunit --colors tests/unit"
    ],
    "tests:unit": [
      "@phpunit:unit"
    ],
    "ci": [
      "@static-analysis",
      "@code-style:check",
      "@tests:unit"
    ],
    "run-ci": [
      "ci/run.sh"
    ]
  }
}
